include header

extends ./header.jade

block meta
  title Douglas Nonato | Guarde Mais - Motion Design
  meta(name='description', content='2D Animation for a a self storage company')
  meta(name='keywords', content='Motion, Design, 2D, Animation, Self Storage, Commercial')

  //- Share image
  meta(property='og:title', content='Douglas Nonato | Guarde Mais - Motion Design')
  meta(property='og:description', content='2D Animation for a a self storage company.')
  meta(property='og:url', content='https://www.douglasnonato.com/guarde-mais-motion.html')
  meta(property='og:site_name', content='Douglas Nonato')
  meta(property='og:image', content='https://douglasnonato.com/assets/images/works/guarde-mais-motion/og-image.jpg')
  meta(property='og:type', content='website')

block content
  //- Main
  main#video
    #top
    include menu
    #single-project.video
      //- Content
      section#header.video
        .flexy.flexy--column.delay-loading
          h1#rev-1.content__title
            | Guarde Mais
          #rev-2.block-right
            h2 2D Animation for a a self storage company
        video(loop='', autoplay='', alt='Guarde Mais - Self Storage', title='Guarde Mais - Self Storage video')
            source(type='video/webm', src='assets/images/works/guarde-mais-motion/guarde-mais-motion-bg.webm')
            source(type='video/mp4', src='assets/images/works/guarde-mais-motion/guarde-mais-motion-bg.mp4')

      section#meta.fadeIn
        .flexy
          .col.date
            small
              | DATE —
            br 
            strong
              | Jul_2015
          .col.position
            small
              | ROLE —
            br
            strong
              | Motion Designer
          .col.kind
            small
              | KIND —
            br
            strong
              | Commercial video

      section.description-section
        .flexy
          h3#rev-3 The job
          .description#rev-4
            p Development of a 2D animation for a 30 second commercial.
      section.full-bg
        .flexy
          figure.fadeIn
            img(src='assets/images/works/guarde-mais-motion/guarde-mais-motion-1.jpg', alt='Guarde Mais')
          figure.fadeIn
            img(src='assets/images/works/guarde-mais-motion/guarde-mais-motion-2.jpg', alt='Guarde Mais')
          figure.fadeIn
            img(src='assets/images/works/guarde-mais-motion/guarde-mais-motion-3.jpg', alt='Guarde Mais')
          .video-responsive.fadeIn
            iframe(src='https://player.vimeo.com/video/144430743?color=d4ea01&title=0&byline=0&portrait=0', width='500', height='281', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='')

      section
        .flexy.flexy--row.projects--related.fadeIn
          h4.content__title--center Other Projects
          .projects
            a.item(href='sebrae-portal-ecommerce.html')
              img(src='assets/images/works/sebrae-portal/work-related.jpg', alt='Sebrae Portal and E-commmerce')
              | Sebrae - Portal and E-commerce
            a.item(href='calculo-juridico-dashboard.html')
              img(src='assets/images/works/calculo-juridico-dashboard/work-related.jpg', alt='Cálculo Jurídico')
              | Cálculo Jurídico - SaaS Dashboard

      include footer

  include scripts-project